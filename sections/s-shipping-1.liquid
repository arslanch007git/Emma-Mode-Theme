{%- style -%}
  .{{ sell_shipping }}--{{ sid }} {
    {% if section.settings.sec_layout_full_width == 'full-width' %}
      width: 100%;
    {% elsif section.settings.sec_layout_full_width == 'auto' %}
        width:max-content;
        max-width:100%;
    {% else %}
      max-width: {{ section.settings.cont_cust_width }}px;
      padding-left: {{ section.settings.padding_x }}px;
      padding-right: {{ section.settings.padding_x }}px;
    {% endif %}
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    {%  if section.settings.cont_align  == 'end' %}
        margin-left:auto;
        margin-right:unset;
        {% elsif section.settings.cont_align  == 'center' %}
        margin-left:auto;
        margin-right:auto;
        {% else %}
        margin-left:unset;
        margin-right:auto;
    {% endif %}
  }








  .{{ sell_shipping }}--{{ sid }} .selluxe-shipping-wrapper {
    background: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    border-radius: {{ section.settings.border_radius }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    display: flex;
    gap:10px;
    align-items: center;
    justify-content: {{ section.settings.space_between_desktop }};
    flex-wrap: wrap;
    font-size: {{ section.settings.text_size_desktop }}px;
    text-transform:{{ section.settings.text_transform_desktop }};
    font-weight: {{ section.settings.font_weight_desktop }};
    line-height: {{ section.settings.line_height_desktop }};
    letter-spacing: {{ section.settings.letter_spacing_desktop }}px;
  }








  .{{ sell_shipping }}--{{ sid }} .selluxe-shipping-left {
    display: flex;
    align-items: center;
    gap: {{ section.settings.gap_between_text_image_pulse }}px;
  }








  .{{ sell_shipping }}--{{ sid }} .selluxe-shipping-pulse {
    width: {{ section.settings.text_size_pulse }}px;
    height: {{ section.settings.text_size_pulse }}px;
    border-radius: 50%;
    background: {{ section.settings.pulse_color }};
    box-shadow: 0 0 0 0 {{ section.settings.pulse_color }};
    animation: pulse-anim-{{ sid }} {{ section.settings.pulse_animation_duration }}s infinite;
    flex-shrink: 0;
    display: block;
    margin-right: {{ section.settings.margin_right_desktop }}px;
  }








  @keyframes pulse-anim-{{ sid }} {
    0% { box-shadow: 0 0 0 0 {{ section.settings.pulse_color }}; }
    70% { box-shadow: 0 0 0 {{ section.settings.pulse_animation_size }}px rgba(0,0,0,0); }
    100% { box-shadow: 0 0 0 0 rgba(0,0,0,0); }
  }








  .{{ sell_shipping }}--{{ sid }} .selluxe-shipping-date {
    font-weight: {{ section.settings.date_font_weight }};
  }








  .{{ sell_shipping }}--{{ sid }} .selluxe-shipping-right {
    font-size: {{ section.settings.text_size_desktop }}px;
    display: flex;
    align-items: center;
    white-space: nowrap;
  }








  .{{ sell_shipping }}--{{ sid }} .selluxe-shipping-right .selluxe-shipping-fast {
    margin-left: {{ section.settings.space_between_right }}px;
  }








  .{{ sell_shipping }}--{{ sid }} .selluxe-flag {
    {% if section.settings.flag_custom_image == true %}
      width: {{ section.settings.flag_size_desktop }}px;
      max-width: {{ section.settings.flag_size_desktop }}px;
      height: auto;
    {% else %}
      width: 18px;
      height: 12px;
    {% endif %}
    object-fit: cover;
    border-radius: {{ section.settings.flag_radius }}px;
    display: inline-block;
  }








