  }
  .s-shipping-1-{{ section.id }} .selluxe-shipping-wrapper {
    background: {{ section.settings.background_color }};
    color:{{ section.settings.text_color }};
    border-radius: {{ section.settings.border_radius }}px;
    padding: {{section.settings.padding-top}}px {{section.settings.padding-right}}px {{section.settings.padding-bottom}}px {{section.settings.padding-left}}px;
    display: flex;
    align-items: center;
    justify-content: {{ section.settings.space-between_desktop }};
    flex-wrap: wrap;
    font-size: {{ section.settings.text_size_desktop }}px;
      font-weight: {{  section.settings.font_weight_desktop }};
    line-height: {{ section.settings.line_height_desktop }};
    letter-spacing: {{ section.settings.letter_spacing_desktop }}px;
  }
  .s-shipping-1-{{ section.id }} .selluxe-shipping-left {
    display: flex;
    align-items: center;
    gap: {{  section.settings.gap-between_text_image_pulse }}px;
  }








  .s-shipping-1-{{ section.id }} .selluxe-shipping-pulse {
    width: {{  section.settings.text_size_pulse }}px;
    height: {{  section.settings.text_size_pulse }}px;
    border-radius: 50%;
    background: {{ section.settings.pulse_color }};
    box-shadow: 0 0 0 0 {{ section.settings.pulse_color }};
    animation: pulse-anim-{{ section.id }} 2s infinite;
    flex-shrink: 0;
    display: block;
    margin-right: {{ section.settings.margin-right_desktop }}px;
  }








  @keyframes pulse-anim-{{ section.id }} {
    0% { box-shadow: 0 0 0 0 {{ section.settings.pulse_color }}; }
    70% { box-shadow: 0 0 0 6px rgba(0,0,0,0); }
    100% { box-shadow: 0 0 0 0 rgba(0,0,0,0); }
  }








  .s-shipping-1-{{ section.id }} .selluxe-shipping-date {
    font-weight: 600;
  }








  .s-shipping-1-{{ section.id }} .selluxe-shipping-right {
    font-size: {{ section.settings.text_size_desktop }}px;
    display: flex;
    align-items: center;    
     
    white-space: nowrap;
  }
  .s-shipping-1-{{ section.id }} .selluxe-shipping-right .selluxe-shipping-fast{
    margin-left: {{  section.settings.space-between_right }}px;
    }






  .s-shipping-1-{{ section.id }} .selluxe-flag {
