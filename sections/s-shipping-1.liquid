{% capture shipping_markup %}
<div class="{{ sell_shipping }}--{{ sid }}">
  <div class="selluxe-shipping-wrapper">
    {% if section.settings.show_left == true %}
    <div class="selluxe-shipping-left">
      <div class="selluxe-shipping-pulse"></div>
      <div class="selluxe-shipping-text">
        {{ section.settings.text_ships_by }} <span class="selluxe-shipping-date"></span>
      </div>
    </div>
{% endif %}
{% if section.settings.show_right == true %}
    <div class="selluxe-shipping-right">
      {% assign country_code = localization.country.iso_code | downcase %}
     
      {% if section.settings.flag_show == true %}
        {% if section.settings.flag_image != blank %}
            <img src="{{ section.settings.flag_image | image_url: width: 200 }}"
                alt="{{ section.settings.flag_image.alt | default: 'Flag' }}"
                class="selluxe-flag"
                loading="lazy">
        {% else %}
            <img src="https://flagcdn.com/24x18/{{ country_code }}.png"
                width="100"
                alt="Flag"
                class="selluxe-flag"
                loading="lazy">
        {% endif %}
      {% endif %}
      <span class="selluxe-shipping-fast_main">
        <span class="selluxe-shipping-fast">{{ section.settings.text_fast }}</span>
        <span class="selluxe-shipping-shipping-text">{{ section.settings.text_shipping }} {% if section.settings.show_country_code %}{{ localization.country.iso_code }}{% endif %}</span>
      </span>
    </div>
{% endif %}
  </div>
</div>
<script>
  document.addEventListener("DOMContentLoaded", function(){
    var wrapper = document.querySelector(".{{ sell_shipping }}--{{ sid }}");
    if(!wrapper) return;
    var dateEl = wrapper.querySelector(".selluxe-shipping-date");
    if(!dateEl) return;
   
    var localeSetting = "{{ section.settings.date_language }}";
    var localeMap = {
      "en": "en-US",
      "nl": "nl-NL",
      "fr": "fr-FR",
      "de": "de-DE",
      "es": "es-ES",
      "it": "it-IT",
      "da": "da-DK",
      "sv": "sv-SE",
      "no": "nb-NO",
      "fi": "fi-FI",
      "pl": "pl-PL"
    };
    var locale = localeMap[localeSetting] || "en-US";
   
    var daysAhead = {{ section.settings.days_ahead }};
    var d = new Date();
    d.setDate(d.getDate() + daysAhead);
   
    try {
      var formatter = new Intl.DateTimeFormat(locale, {
        weekday: 'short',
        month: 'short',
        day: 'numeric'
      });
      dateEl.textContent = formatter.format(d);
    } catch (err) {
      dateEl.textContent = d.toDateString();
    }
  });
</script>
{% endcapture %}




