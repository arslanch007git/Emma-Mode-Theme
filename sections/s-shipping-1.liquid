<script>
  document.addEventListener("DOMContentLoaded", function(){
    var wrapper = document.querySelector(".s-shipping-1-{{ section.id }}");
    if(!wrapper) return;








    var dateEl = wrapper.querySelector(".selluxe-shipping-date");
    if(!dateEl) return;








    // 1Ô∏è‚É£ Determine locale from dropdown
    var localeSetting = "{{ section.settings.date_language }}";
    var localeMap = {
      "en": "en-US",
      "nl": "nl-NL",
      "fr": "fr-FR",
      "de": "de-DE",
      "es": "es-ES",
      "it": "it-IT",
      "da": "da-DK",
      "sv": "sv-SE",
      "no": "nb-NO",
      "fi": "fi-FI",
      "pl": "pl-PL"
    };
    var locale = localeMap[localeSetting] || "en-US";








    // 2Ô∏è‚É£ Calculate target date
    var daysAhead = {{ section.settings.days_ahead }};
    var d = new Date();
    d.setDate(d.getDate() + daysAhead);








    // 3Ô∏è‚É£ Format localized date
    try {
      var formatter = new Intl.DateTimeFormat(locale, {
        weekday: 'short',
        month: 'short',
        day: 'numeric'
      });
      dateEl.textContent = formatter.format(d);
    } catch (err) {
      dateEl.textContent = d.toDateString();
    }
  });
</script>
{% endcapture %}








