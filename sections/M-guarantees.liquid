<div class="cstm-services-wrapper" style="padding: {{ section.settings.padtop }}px 0 {{ section.settings.padbtm }}px 0; background-color: {{ section.settings.bg-color }}">
  <div class="page-width">
  <div class="cstm-services" style="gap:{{ section.settings.gap }}px; grid-template-columns: repeat({{ section.settings.num }}, 1fr);">
    {% for block in section.blocks %}
      <div class="cstm-services-box" style="background:{{ section.settings.card-bg-color }};">
        {% if block.settings.img != blank %}
          <div class="cstm-sb-icon-wrapper" style="background:{{ section.settings.iconsbgClr }}">
          <img src="{{ block.settings.img | image_url }}" style="width: {{ section.settings.width }}px; height:{{ section.settings.width }}px;" class="cstm-services-img" alt="Image">
          </div>  
        {% endif %}
        {% if block.settings.title != blank %}
          <h4 style="color: {{ section.settings.txt-color }}; font-size: {{ section.settings.titlesize }}px; margin: {{ section.settings.titlemargin }}px 0 0 0"">{{ block.settings.title }}</h4>
        {% endif %}
        {% if block.settings.desc != blank %}
          <p style="text-decoration:{{ block.settings.text-decoration }};color: {{ section.settings.txt-color }}; font-size: {{ section.settings.descsize }}px; margin: {{ section.settings.descmargin }}px 0 0 0">{{ block.settings.desc }}</p>
        {% endif %}
      </div>
      {% endfor %}
  </div>
  </div>
</div>
{% schema %}
  {
    "name": "M Guarantees",
    "max_blocks": 4,
    "settings": [
      {
        "type": "range",
        "id": "num",
        "min": 1,
        "max": 4,
        "step": 1,
        "unit": "box",
        "label": "Boxes in a row",
        "default": 4
      },
      {
        "type": "color",
        "id": "bg-color",
        "label": "Background",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "card-bg-color",
        "label": "Card Background",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "iconsbgClr",
        "label": "Icons Background",
        "default": "#dddddd"
      },
      {
        "type": "color",
        "id": "txt-color",
        "label": "Text Color",
        "default": "#000"
      },
      {
        "type": "range",
        "id": "padtop",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding Top",
        "default": 40
      },
     {
        "type": "range",
        "id": "padbtm",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 40
      },
      {
        "type": "range",
        "id": "width",
        "min": 10,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "image Width",
        "default": 40
      },
      {
        "type": "range",
        "id": "titlesize",
        "min": 0,
        "max": 35,
        "step": 1,
        "unit": "px",
        "label": "Title Size",
        "default": 18
      },
      {
        "type": "range",
        "id": "titlemargin",
        "min": 0,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "Title Margin",
        "default": 0
      },
      {
        "type": "range",
        "id": "descsize",
        "min": 0,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "Text Size",
        "default": 13
      },
      {
        "type": "range",
        "id": "descmargin",
        "min": 0,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "Text Margin",
        "default": 0
      },
      {
        "type": "range",
        "id": "gap",
        "min": 0,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "Gap b/w Cards",
        "default": 0
      }
    ],
    "blocks":[
      {
        "type": "service",
        "name": "M Guarantees",
        "settings":[
          {
            "type": "image_picker",
            "id": "img",
            "label": "Image"
          },
          {
            "type": "inline_richtext",
            "id": "title",
            "label": "Title",
            "default": "Enter Heading Here"
          },
          {
            "type": "inline_richtext",
            "id": "desc",
            "label": "Enter some Text",
            "default": "Enter Text Here"
          },
          {
            "type": "select",
            "id": "text-decoration",
            "label": "Text Decoration",
            "options": [
              {
                "value": "none",
                "label": "None"
              },
              {
                "value": "underline",
                "label": "Underline"
              }
            ],
            "default": "none"
          }          
        ]
      }
    ],
    "presets":[
      {
        "name": "M Guarantees"
      }
    ]
  }
{% endschema %}