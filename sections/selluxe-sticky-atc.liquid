{% if product and product.available %}
<style>
  .sticky-atc-bar {
    position: fixed;
    {% if section.settings.sticky_position == "top" %}
      top: 112px;
    {% else %}
      bottom: 0;
    {% endif %}
    left: 0;
    right: 0;
    background: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    box-shadow: 0 -2px 10px rgba(0,0,0,.08);
    z-index: 12;
    display: none;
    justify-content: space-between;
    align-items: center;
    padding: 12px 16px;
    gap: 16px;
    flex-wrap: nowrap;
  }

  .sticky-atc-left {
    display: flex;
    align-items: center;
    gap: 14px;
    flex: 1;
    min-width: 0;
  }

  .sticky-atc-left img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: {{ section.settings.image_radius }}px;
    flex-shrink: 0;
  }

  .sticky-atc-info {
    display: flex;
    flex-direction: column;
    min-width: 0;
    gap: 6px;
  }

  .sticky-atc-info .title {
    font-weight: 600;
    font-size: 16px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .sticky-atc-info .price-row {
    display: flex;
    align-items: center;
    gap: 10px;
    flex-wrap: wrap;
    font-size: 14px;
  }

  .sticky-atc-info .price-row .current {
    color: {{ section.settings.price_color }};
    font-weight: 600;
  }

  .sticky-atc-info .price-row .compare {
    text-decoration: line-through;
    color: {{ section.settings.compare_price_color }};
  }

  .sticky-atc-info .price-row .discount {
    background: {{ section.settings.discount_bg_color }};
    color: {{ section.settings.discount_text_color }};
    font-size: 12px;
    padding: 3px 8px;
    border-radius: {{ section.settings.discount_badge_radius }}px;
    font-weight: 600;
    white-space: nowrap;
  }

  .sticky-atc-right form {
    display: flex;
    align-items: center;
    gap: 10px;
    flex-wrap: nowrap;
  }

  .sticky-atc-right select {
    padding: 10px 18px;
    font-size: 14px;
    border-radius: {{ section.settings.select_radius }}px;
    border: 1px solid #ccc;
    min-width: 160px;
  }

  .quantity-wrapper {
    display: flex;
    align-items: center;
    border-radius: {{ section.settings.qty_input_radius }}px;
    overflow: hidden;
    border: 1px solid #ccc;
  }

  .quantity-wrapper button {
    background: #e0e0e0;
    border: none;
    width: 32px;
    height: 32px;
    font-size: 18px;
    font-weight: bold;
    cursor: pointer;
    border-radius: {{ section.settings.qty_button_radius }}px;
  }

  .quantity-wrapper input {
    width: 40px;
    text-align: center;
    border: none;
    outline: none;
    -moz-appearance: textfield;
  }

  .add-to-cart-btn {
    background: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
    padding: 10px 18px;
    font-size: 14px;
    font-weight: 600;
    border: none;
    border-radius: {{ section.settings.button_radius }}px;
    cursor: pointer;
    white-space: nowrap;
  }

  /* -------- MOBILE CLEAN -------- */
  @media(max-width: 768px) {
    .sticky-atc-bar {
      flex-direction: column;
      align-items: stretch;
      gap: 10px;
      padding: 12px;
      {% if section.settings.sticky_position == "top" %}
        top: 80px;
      {% else %}
        bottom: 0;
      {% endif %}
    }

    /* Hide image + title + prices + badge on mobile */
    .sticky-atc-left {
      display: none !important;
    }

    /* Hide quantity on mobile */
    .quantity-wrapper {
      display: none !important;
    }

    .sticky-atc-right {
      width: 100%;
      flex-direction: column;
      gap: 8px;
    }

    .sticky-atc-right form {
      flex-direction: column;
      gap: 8px;
      width: 100%;
    }

    .sticky-atc-right select,
    .add-to-cart-btn {
      width: 100%;
    }

    .add-to-cart-btn {
      padding: 14px;
      font-size: 16px;
    }
  }
</style>

<div class="sticky-atc-bar">
  <div class="sticky-atc-left">
    <img src="{{ product.featured_image | image_url: width: 200 }}" alt="{{ product.title }}">
    <div class="sticky-atc-info">
      <div class="title">{{ product.title }}</div>
      <div class="price-row">
        <span class="current">{{ product.price | money }}</span>
        {% if product.compare_at_price > product.price %}
          <span class="compare">{{ product.compare_at_price | money }}</span>
          <span class="discount">
            {{ section.settings.discount_text_prefix }}
            {{ product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price | round }}%
          </span>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="sticky-atc-right">
    {% form 'product', product, id: 'StickyATCForm', class: 'product-single__form' %}
      <select id="StickyVariant">
        {% for variant in product.variants %}
          <option value="{{ variant.id }}" {% if variant == product.selected_or_first_available_variant %}selected{% endif %}>
            {{ variant.title }}
          </option>
        {% endfor %}
      </select>

      <div class="quantity-wrapper">
        <button type="button" id="qty-minus">âˆ’</button>
        <input id="StickyQuantity" type="number" value="1" min="1">
        <button type="button" id="qty-plus">+</button>
      </div>

      <button type="submit" id="StickyATCButton" class="add-to-cart-btn">{{ 'products.product.add_to_cart' | t }}</button>
    {% endform %}
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const stickyBar = document.querySelector('.sticky-atc-bar');
  const screenWidth = window.innerWidth;
  const threshold = screenWidth <= 768 ? 1100 : 1000;

  window.addEventListener('scroll', () => {
    stickyBar.style.display = window.scrollY >= threshold ? 'flex' : 'none';
  });

  const qtyInput = document.getElementById('StickyQuantity');
  document.getElementById('qty-minus')?.addEventListener('click', () => {
    qtyInput.value = Math.max(1, parseInt(qtyInput.value) - 1);
  });
  document.getElementById('qty-plus')?.addEventListener('click', () => {
    qtyInput.value = parseInt(qtyInput.value) + 1;
  });

  document.getElementById('StickyATCButton')?.addEventListener('click', function (event) {
    event.preventDefault();
    const variantId = document.getElementById('StickyVariant').value;
    const quantity = qtyInput ? qtyInput.value : 1;

    fetch('/cart/add.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ id: variantId, quantity })
    })
    .then(res => res.json())
    .then(data => console.log('Added:', data))
    .catch(err => console.error('ATC error:', err));
  });
});
</script>

{% endif %}

{% schema %}
{
  "name": "Sticky ATC Bar V4",
  "settings": [
    { "type": "select", "id": "sticky_position", "label": "Position", "default": "bottom", "options": [ { "label": "Top", "value": "top" }, { "label": "Bottom", "value": "bottom" } ] },
    { "type": "color", "id": "background_color", "label": "Background color", "default": "#ffffff" },
    { "type": "color", "id": "text_color", "label": "Text color", "default": "#000000" },
    { "type": "color", "id": "button_color", "label": "Button background color", "default": "#000000" },
    { "type": "color", "id": "button_text_color", "label": "Button text color", "default": "#ffffff" },
    { "type": "color", "id": "price_color", "label": "Price color", "default": "#000000" },
    { "type": "color", "id": "compare_price_color", "label": "Compare Price color", "default": "#888888" },
    { "type": "color", "id": "discount_bg_color", "label": "Discount badge background", "default": "#880000" },
    { "type": "color", "id": "discount_text_color", "label": "Discount badge text", "default": "#ffffff" },
    { "type": "text", "id": "discount_text_prefix", "label": "Discount text prefix", "default": "Rabatt" },
    { "type": "range", "id": "discount_badge_radius", "label": "Discount badge radius", "min": 0, "max": 30, "default": 4, "unit": "px" },
    { "type": "range", "id": "image_radius", "label": "Image border radius", "min": 0, "max": 30, "default": 6, "unit": "px" },
    { "type": "range", "id": "select_radius", "label": "Variant select radius", "min": 0, "max": 30, "default": 6, "unit": "px" },
    { "type": "range", "id": "qty_button_radius", "label": "Quantity button radius", "min": 0, "max": 30, "default": 6, "unit": "px" },
    { "type": "range", "id": "qty_input_radius", "label": "Quantity input radius", "min": 0, "max": 30, "default": 6, "unit": "px" },
    { "type": "range", "id": "button_radius", "label": "ATC button radius", "min": 0, "max": 30, "default": 6, "unit": "px" }
  ],
  "presets": [ { "name": "Sticky ATC Bar V4" } ]
}
{% endschema %}
