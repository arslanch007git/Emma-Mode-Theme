{% doc %}
  @prompt
    Create a full-width split section with overlapping layout:
    
    Layout
    
    Left side: large black rectangular panel (approx 55% width on desktop)
    
    Right side: image block (approx 45% width)
    
    Black panel slightly overlaps the image on desktop
    
    Mobile: stack vertically (black panel first, image second)
    
    LEFT PANEL (Black background)
    
    Inside the black panel, left-aligned content with generous padding:
    
    Small uppercase label at top:
    ABOUT US
    
    Large serif headline below:
    Ethan & Lara
    
    Body paragraph (regular weight, white text):
    
    At Ethan & Lara, everything revolves around our passion for jewelry. We believe that jewelry is more than just an accessory it tells a story and expresses who you are. We lovingly select the most beautiful trendy and timeless designs, so that everyone can find something that fits their unique style.
    
    Styling requirements:
    
    Black background (#000)
    
    White text
    
    Label small uppercase with letter spacing
    
    Brand name larger, elegant serif font
    
    Paragraph smaller, comfortable line height
    
    Content vertically centered in black panel
    
    Padding approx 60px desktop / 30px mobile
    
    All text must be editable in the section settings.
    
    RIGHT SIDE (Image)
    
    Image picker
    
    Image fills container
    
    Maintain aspect ratio
    
    Desktop: aligned right
    
    No overlay text on image
    
    Section behavior
    
    Desktop: overlapping black panel on top of image
    
    Mobile: stacked clean layout
    
    Max width ~1200â€“1300px
    
    Plenty of white margin around section
    
    Smooth responsive behavior
    
    Customization
    
    Include settings for:
    
    Label text
    
    Brand headline
    
    Paragraph text
    
    Image upload
    
    Name the section:
    
    About Us Split Panel
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-about-split-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 20px;
  }

  .ai-about-split-container-{{ ai_gen_id }} {
    max-width: 1300px;
    margin: 0 auto;
    position: relative;
  }

  .ai-about-split-wrapper-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0;
    position: relative;
  }

  .ai-about-split-panel-{{ ai_gen_id }} {
    background-color: #000000;
    color: #ffffff;
    padding: 60px;
    display: flex;
    align-items: center;
    position: relative;
    z-index: 2;
  }

  .ai-about-split-content-{{ ai_gen_id }} {
    max-width: 500px;
  }

  .ai-about-split-label-{{ ai_gen_id }} {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin: 0 0 20px 0;
    color: #ffffff;
    font-weight: 400;
  }

  .ai-about-split-headline-{{ ai_gen_id }} {
    font-family: {{ block.settings.headline_font.family }}, {{ block.settings.headline_font.fallback_families }};
    font-weight: {{ block.settings.headline_font.weight }};
    font-style: {{ block.settings.headline_font.style }};
    font-size: 48px;
    line-height: 1.2;
    margin: 0 0 24px 0;
    color: #ffffff;
  }

  .ai-about-split-paragraph-{{ ai_gen_id }} {
    font-size: 16px;
    line-height: 1.6;
    margin: 0;
    color: #ffffff;
  }

  .ai-about-split-paragraph-{{ ai_gen_id }} p {
    margin: 0 0 16px 0;
  }

  .ai-about-split-paragraph-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-about-split-image-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 400px;
  }

  .ai-about-split-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-about-split-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    min-height: 400px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-about-split-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-about-split-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (min-width: 750px) {
    .ai-about-split-wrapper-{{ ai_gen_id }} {
      grid-template-columns: 55% 45%;
      min-height: 500px;
    }

    .ai-about-split-panel-{{ ai_gen_id }} {
      grid-column: 1;
      grid-row: 1;
      margin-right: -80px;
    }

    .ai-about-split-image-{{ ai_gen_id }} {
      grid-column: 2;
      grid-row: 1;
      z-index: 1;
    }

    .ai-about-split-image-placeholder-{{ ai_gen_id }} {
      min-height: 500px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-about-split-panel-{{ ai_gen_id }} {
      padding: 30px;
    }

    .ai-about-split-headline-{{ ai_gen_id }} {
      font-size: 36px;
    }

    .ai-about-split-paragraph-{{ ai_gen_id }} {
      font-size: 15px;
    }
  }
{% endstyle %}

<about-split-{{ ai_gen_id }} class="ai-about-split-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-about-split-container-{{ ai_gen_id }}">
    <div class="ai-about-split-wrapper-{{ ai_gen_id }}">
      <div class="ai-about-split-panel-{{ ai_gen_id }}">
        <div class="ai-about-split-content-{{ ai_gen_id }}">
          {% if block.settings.label != blank %}
            <div class="ai-about-split-label-{{ ai_gen_id }}">
              {{ block.settings.label }}
            </div>
          {% endif %}

          {% if block.settings.headline != blank %}
            <h2 class="ai-about-split-headline-{{ ai_gen_id }}">
              {{ block.settings.headline }}
            </h2>
          {% endif %}

          {% if block.settings.paragraph != blank %}
            <div class="ai-about-split-paragraph-{{ ai_gen_id }}">
              {{ block.settings.paragraph }}
            </div>
          {% endif %}
        </div>
      </div>

      <div class="ai-about-split-image-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 1000 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
          >
        {% else %}
          <div class="ai-about-split-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-about-split-empty-state-{{ ai_gen_id }}">
              Next, add an image
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</about-split-{{ ai_gen_id }}>

<script>
  (function() {
    class AboutSplit{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }

    customElements.define('about-split-{{ ai_gen_id }}', AboutSplit{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "About Us Split Panel",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Left panel content"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "ABOUT US"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Ethan & Lara"
    },
    {
      "type": "font_picker",
      "id": "headline_font",
      "label": "Headline font",
      "default": "serif"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "<p>At Ethan & Lara, everything revolves around our passion for jewelry. We believe that jewelry is more than just an accessory it tells a story and expresses who you are. We lovingly select the most beautiful trendy and timeless designs, so that everyone can find something that fits their unique style.</p>"
    },
    {
      "type": "header",
      "content": "Right side image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "About Us Split Panel"
    }
  ]
}
{% endschema %}
