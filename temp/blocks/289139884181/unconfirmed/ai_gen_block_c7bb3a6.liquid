{% doc %}
  @prompt
    Create a full-width product page section with a white background containing three equally spaced columns (desktop) and stacked columns on mobile.
    
    Each column must include:
    
    A centered animated GIF icon at the top (simple black line style):
    
    Column 1: water droplet GIF
    
    Column 2: human silhouette GIF
    
    Column 3: shield outline GIF
    
    All GIF icons must be monochrome black, minimal line style, approximately 50–55px tall, centered above the text.
    
    Below each icon:
    
    A bold, uppercase heading
    
    Smaller paragraph text underneath
    
    Center-aligned content
    
    Clean modern font (inherit theme font)
    
    Text content:
    
    Column 1
    Heading: WATER, SWEAT AND HEAT RESISTANT
    Subtext: Whether you want to shower, exercise or swim, that's no problem!
    
    Column 2
    Heading: NO DISCOLORATION, NO GREEN COLOR
    Subtext: Our jewelry always retains its original color and will never turn green.
    
    Column 3
    Heading: PREMIUM & TIMELESS MATERIALS
    Subtext: The jewelry is made of the highest quality materials to ensure long-term use.
    
    Layout requirements:
    
    Three-column grid on desktop
    
    Single-column stacked on mobile
    
    Large horizontal spacing between columns (~60px desktop)
    
    Icons above text with ~14px spacing
    
    Headlines slightly letter-spaced and uppercase
    
    Subtext smaller and lighter weight
    
    Entire section centered
    
    Max width around 1200px
    
    Padding top/bottom approx 30px
    
    Must include:
    
    Image pickers for each GIF icon
    
    Text fields for each headline and paragraph
    
    Maintain identical alignment and proportions as reference image
    
    Responsive behavior
    
    Name the section: “3 USP Icons Row (GIF)”
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-usp-icons-row-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
  }

  .ai-usp-icons-row__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.column_gap }}px;
  }

  .ai-usp-icons-row__column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .ai-usp-icons-row__icon-wrapper-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.icon_spacing }}px;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .ai-usp-icons-row__icon-{{ ai_gen_id }} {
    max-width: {{ block.settings.icon_size }}px;
    height: auto;
    display: block;
  }

  .ai-usp-icons-row__icon-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    border-radius: 4px;
  }

  .ai-usp-icons-row__icon-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-usp-icons-row__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    text-transform: uppercase;
    letter-spacing: {{ block.settings.heading_letter_spacing }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.text_spacing }}px;
    line-height: 1.3;
  }

  .ai-usp-icons-row__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    font-weight: {{ block.settings.text_weight }};
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-usp-icons-row__container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.mobile_row_gap }}px;
    }

    .ai-usp-icons-row__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.9 }}px;
    }

    .ai-usp-icons-row__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<usp-icons-row-{{ ai_gen_id }} class="ai-usp-icons-row-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-usp-icons-row__container-{{ ai_gen_id }}">
    <div class="ai-usp-icons-row__column-{{ ai_gen_id }}">
      <div class="ai-usp-icons-row__icon-wrapper-{{ ai_gen_id }}">
        {% if block.settings.icon_1 %}
          <img
            src="{{ block.settings.icon_1 | image_url: width: 200 }}"
            alt="{{ block.settings.heading_1 | escape }}"
            class="ai-usp-icons-row__icon-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.icon_size }}"
            height="{{ block.settings.icon_size }}"
          >
        {% else %}
          <div class="ai-usp-icons-row__icon-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      <h3 class="ai-usp-icons-row__heading-{{ ai_gen_id }}">{{ block.settings.heading_1 }}</h3>
      <p class="ai-usp-icons-row__text-{{ ai_gen_id }}">{{ block.settings.text_1 }}</p>
    </div>

    <div class="ai-usp-icons-row__column-{{ ai_gen_id }}">
      <div class="ai-usp-icons-row__icon-wrapper-{{ ai_gen_id }}">
        {% if block.settings.icon_2 %}
          <img
            src="{{ block.settings.icon_2 | image_url: width: 200 }}"
            alt="{{ block.settings.heading_2 | escape }}"
            class="ai-usp-icons-row__icon-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.icon_size }}"
            height="{{ block.settings.icon_size }}"
          >
        {% else %}
          <div class="ai-usp-icons-row__icon-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      <h3 class="ai-usp-icons-row__heading-{{ ai_gen_id }}">{{ block.settings.heading_2 }}</h3>
      <p class="ai-usp-icons-row__text-{{ ai_gen_id }}">{{ block.settings.text_2 }}</p>
    </div>

    <div class="ai-usp-icons-row__column-{{ ai_gen_id }}">
      <div class="ai-usp-icons-row__icon-wrapper-{{ ai_gen_id }}">
        {% if block.settings.icon_3 %}
          <img
            src="{{ block.settings.icon_3 | image_url: width: 200 }}"
            alt="{{ block.settings.heading_3 | escape }}"
            class="ai-usp-icons-row__icon-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.icon_size }}"
            height="{{ block.settings.icon_size }}"
          >
        {% else %}
          <div class="ai-usp-icons-row__icon-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      <h3 class="ai-usp-icons-row__heading-{{ ai_gen_id }}">{{ block.settings.heading_3 }}</h3>
      <p class="ai-usp-icons-row__text-{{ ai_gen_id }}">{{ block.settings.text_3 }}</p>
    </div>
  </div>
</usp-icons-row-{{ ai_gen_id }}>

<script>
  (function() {
    class UspIconsRow{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }
    customElements.define('usp-icons-row-{{ ai_gen_id }}', UspIconsRow{{ ai_gen_id }});
  })();
</script>

